<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple"
    android:orientation="vertical"
    tools:context="com.example.isellgren.suncatcher.tester">


    <RelativeLayout
        android:layout_width="800dp"
        android:layout_height="600dp"
        android:layout_marginLeft="-100dp"
        android:layout_marginStart="-100dp"
        android:layout_marginBottom="-90dp"
        android:layout_weight=".5"
        android:rotation="-30">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"
            android:background="@android:color/holo_purple"
            android:onClick="Devices"
            android:rotation="30"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="238dp"
            android:layout_marginStart="238dp"
            android:layout_marginTop="51dp"
            android:rotation="30"
            android:text="Devices"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:rotation="30"
            app:srcCompat="@drawable/ic_wifi_white_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="800dp"
        android:layout_height="600dp"
        android:layout_marginLeft="-100dp"
        android:layout_weight=".5"
        android:rotation="-30">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_orange_light"
            tools:ignore="VectorDrawableCompat"
            android:onClick="Status"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="258dp"
            android:layout_marginStart="258dp"
            android:rotation="30"
            android:text="Status"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:rotation="30"
            app:srcCompat="@drawable/ic_home_white_24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="800dp"
        android:layout_height="500dp"
        android:layout_marginLeft="-100dp"
        android:layout_marginStart="-100dp"
        android:layout_marginBottom="-90dp"
        android:layout_weight=".5"
        android:rotation="-30">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="30000dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:background="@android:color/holo_blue_dark"
            android:contentDescription="Settings"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageButton3"
            android:layout_below="@+id/imageView5"
            android:layout_marginEnd="299dp"
            android:rotation="30"
            android:text="Settings"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:onClick="Settings"
            app:srcCompat="@drawable/ic_settings_white_24dp" />

    </RelativeLayout>
</LinearLayout>


