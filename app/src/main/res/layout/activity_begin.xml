<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.isellgren.suncatcher.BeginActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alwaysDrawnWithCache="false">


        <Button
            android:id="@+id/stats4"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_assessment_black_24dp"
            android:onClick="onstatsClick"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/device"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_devices_black_24dp"
            android:onClick="ondeviceClick"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stats4" />

        <Button
            android:id="@+id/profile"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_account_box_black_24dp"
            android:onClick="onprofileClick"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/settings"
            android:layout_width="118dp"
            android:layout_height="100dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_settings_black_24dp"
            android:onClick="onpsettingClick"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile" />
    </android.support.constraint.ConstraintLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/shadow"
        android:fadingEdge="horizontal|vertical"
        app:itemIconTint="@android:color/holo_purple"
        app:menu="@menu/main_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
